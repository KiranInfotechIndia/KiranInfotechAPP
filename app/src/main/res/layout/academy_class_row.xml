<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_7sdp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appPrimaryBlue"
            android:padding="@dimen/_10sdp"
            android:text="@string/course"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <ImageView
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:text="@string/academy"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

           <TextView
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_gravity="center"
               android:id="@+id/academyName"
               android:layout_width="wrap_content"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_height="wrap_content"/>

       </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="Available Seats"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:id="@+id/classAvailableSeats"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:background="@color/appSecondaryBlue"
                android:padding="10dp">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="Date" />

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time" />
            </TableRow>


            <TableRow
                android:padding="10dp">

                <TextView
                    android:id="@+id/classDate"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="26-10-2022"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/classTime"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="10:00 AM to 12:00 PM"/>
            </TableRow>

        </TableLayout>


        <Button
            android:id="@+id/btnStudentRegister"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/appThirdYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</androidx.cardview.widget.CardView>