<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/solutionView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_7sdp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/_10sdp"
            android:id="@+id/solutionName"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/appPrimaryBlue"
            android:text="School Module"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/solutionImg"
            android:src="@drawable/ic_solutions"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_180sdp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/btnPlayVideo"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/button"
                android:src="@drawable/ic_video"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEquiryNow"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Enquire Now"
                android:textAllCaps="false"
                android:textSize="@dimen/_7sdp"
                android:background="@drawable/button"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>