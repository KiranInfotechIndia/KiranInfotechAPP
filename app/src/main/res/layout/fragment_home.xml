<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnProducts"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_7sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:background="@color/appPrimaryBlue"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@string/products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_tallylogo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/btnSolutions"
            android:layout_marginStart="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            android:elevation="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:background="@color/appPrimaryBlue"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/solutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_solutions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnTallyOnAws"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_7sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:background="@color/appPrimaryBlue"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Tally on Cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/ic_aws"
                        android:padding="@dimen/_35sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"/>

                 </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/btnTraining"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_7sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:background="@color/appPrimaryBlue"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@string/training"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView

                        android:padding="@dimen/_25sdp"
                        android:src="@drawable/ic_course"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>